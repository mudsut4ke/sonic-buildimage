                }
            ]
        },
        {
            "name": "any thermal warining",
            "conditions": [
                {
                    "type": "thermal.any.warining"
                }
            ],
            "actions": [
                {
                    "type": "fan.all.set_speed",
                    "speed": "100"
                }
            ]
        },
        {
            "name": "temp over high critical threshold",
            "conditions": [
                {
                    "type": "thermal.over.high_critical_threshold"
                }
            ],
            "actions": [
                {
                    "type": "switch.power_cycling"
                }
            ]
        }
